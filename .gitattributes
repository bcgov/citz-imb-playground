# Auto detect text files and perform LF normalization
* text=auto

# Force these files to have specific line endings
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf

# Don't modify line endings in these files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.svg text
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary

# Scripts should use LF
*.sh text eol=lf
*.bash text eol=lf
*.zsh text eol=lf

# Windows-specific files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf

# Config files
.env* text eol=lf
.gitignore text eol=lf
.gitattributes text eol=lf
.editorconfig text eol=lf
